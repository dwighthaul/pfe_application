<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white_eseo"
    tools:context="fr.eseo.dis.hubertpa.pfe_application.WelcomeActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eseo_groupe" />

    <Button
        android:id="@+id/button_visitor"
        android:layout_width="187dp"
        android:layout_height="64dp"
        android:layout_marginBottom="124dp"
        android:layout_marginEnd="112dp"
        android:background="@color/blue_grey_text_eseo"
        android:text="@string/welcome_visitor"
        android:textColor="@color/background_white_eseo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="187dp"
        android:layout_height="64dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="112dp"
        android:background="@color/blue_grey_text_eseo"
        android:text="@string/welcome_login"
        android:textColor="@color/background_white_eseo"
        app:layout_constraintBottom_toTopOf="@+id/button_visitor"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>
